{
  "name": "openapi-codegen",
  "version": "0.0.1",
  "description": "OpenAPI code generator framework",
  "repository": "https://github.com/fabien0102/openapi-codegen",
  "author": "Fabien Bernard",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "workspaces": [
    "cli",
    "plugins/typescript"
  ],
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.9",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.4"
  },
  "jest": {
    "projects": [
      {
        "preset": "ts-jest",
        "displayName": "cli",
        "testMatch": [
          "<rootDir>/cli/**/*.test.ts"
        ]
      },
      {
        "preset": "ts-jest",
        "displayName": "plugins/typescript",
        "testMatch": [
          "<rootDir>/plugins/typescript/**/*.test.ts"
        ]
      }
    ]
  }
}
